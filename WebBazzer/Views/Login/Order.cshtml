@model IEnumerable<WebBazzer.Models.Order>
@using WebBazzer.Models 
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Order> Order = ViewBag.Order;
}

<h2>Order</h2>

<style>
    /*#wrapper {
        width: 400px;
