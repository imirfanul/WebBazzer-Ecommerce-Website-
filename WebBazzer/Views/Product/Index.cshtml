<div class="wrapper">
    <br />
    <br />
    <br />
    <br />

    <div class="input-group mg-b-pro-edt">
        <span class="input-group-addon" style="color:white; font-size:xx-large;position:relative;font-weight:bolder"><i class="icon nalika-home icon-wrap" aria-hidden="true"></i>All Products</span>

    </div>
    <div class="product-status mg-b-30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap">
                        <table>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Sub Category</th>
                                <th>Price</th>                               
                                <th>Reorder Level</th>
                                <th>Available Quantity</th>
                                <th>Description</th>
                                <th>Discount</th>
                                <th>Stock In</th>
                                <th>Action</th>

                            </tr>

                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <tr>
                                    <td><img src="@Model.Rows[i][10]" alt="Alternate Text" /></td>
                                    <td>@Model.Rows[i][1]</td>
                                    <td>@Model.Rows[i][2]</td>
                                    <td>@Model.Rows[i][3]</td>
                                    <td>$@Model.Rows[i][6]</td>
                                    <td>@Model.Rows[i][4]</td>
                                    <td>@Model.Rows[i][5]</td>
                                    <td>@Model.Rows[i][11]</td>
                                    <td>@Model.Rows[i][12]</td>
                                    <td>@Model.Rows[i][7]</td>
                                    

                                    <td>
                                        <a href="@Url.Action("Edit", "Product", new {@id=@Model.Rows[i][0] })">Edit</a>
                                        <a href="@Url.Action("Delete", "Product", new {@id=@Model.Rows[i][0] })">Delete</a>
                                    </td>
                                </tr>
                            }
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>



</div>