@model WebBazzer.Models.Products

@{

    //Layout = null;
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title></title>
   
</head>
<style>
    #errmsg {
        color: red;
    }
    h1{
        color:red;
        text-decoration-color:red;
        font:bolder;
        font-size:xx-large;
        font-feature-settings:on;
        
    }
    .field-validation-error {
        margin-left: 140px;
        color: red;
    }

    #wrapper {
        width: 50%;
        margin: 0 auto;
    }

    input {
        width: 240px;
    }

    #message{
        color:red;
        font:bolder;
        font-family:fantasy;
        font-size:larger;
        font-style:italic;
        font-feature-settings:on;
    }
</style>



<div id="wrapper">
    @using (Html.BeginForm("Save", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
       <br/>
    <br />
    <br />
    <br />
    <br />
    <br />
          @Html.AntiForgeryToken()
    <div class="single-product-tab-area mg-b-30">
        <div class="input-group mg-b-pro-edt">
            <span class="input-group-addon" style="color:white; font-size:xx-large;position:relative;font-weight:bolder"><i class="icon nalika-home icon-wrap" aria-hidden="true"></i>Save Product</span>
        </div>

        <div class="input-group mg-b-pro-edt">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
