        <div class="input-group mg-b-pro-edt">
            <span class="input-group-addon"><i class="icon nalika-user" aria-hidden="true"></i></span>
            @*@Html.LabelFor(model => model.Name, new { @class = "form-control" })*@

            @Html.TextBoxFor(x => x.PName, new { id = "Name", @class = "form-control", placeholder = "Product Name" })
            @Html.ValidationMessageFor(x => x.PName)

        </div>
        <div class="input-group mg-b-pro-edt">
            <span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
            @*@Html.LabelFor(model => model.Price, new { @class = "form-control" })*@

            @Html.TextBoxFor(x => x.Price, new { id = "Price", @class = "form-control", placeholder = "Regular Price" })
            @Html.ValidationMessageFor(x => x.Price)

        </div>
        <div class="input-group mg-b-pro-edt">
            <span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
            @*@Html.LabelFor(model => model.ReorderLevel, new { @class = "form-control" })*@

            @Html.TextBoxFor(x => x.ReorderLevel, new { id = "ReorderLevel", @class = "form-control", placeholder = "Reorder Level" })
            @Html.ValidationMessageFor(x => x.ReorderLevel)

        </div>

        <div class="input-group mg-b-pro-edt">
            <span class="input-group-addon"><i class="icon nalika-favorites-button" aria-hidden="true"></i></span>
            @*@Html.LabelFor(model => model.Description, new { @class = "form-control" })*@

            @Html.TextBoxFor(x => x.Description, new { id = "Description", @class = "form-control", placeholder = "Product Description" })
            @Html.ValidationMessageFor(x => x.Description)

        </div>

        <div class="input-group mg-b-pro-edt">
            @*@Html.LabelFor(x => x.FileName, new { @class = "form-control" })*@
            <span class="input-group-addon"><i class="fa fa-image" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.FileName, new { type = "file"})
            @Html.ValidationMessageFor(x => x.FileName)
        </div>

        <div class="input-group mg-b-pro-edt">
            <span class="input-group-addon"><i class="icon nalika-favorites" aria-hidden="true"></i></span>
            @*@Html.LabelFor(model => model.AvailableQuantity, new { @class = "form-control" })*@

            @Html.TextBoxFor(x => x.AvailableQuantity, new { id = "AvailableQuantity", @class = "form-control", placeholder = "Stock In Quantity" })
            @Html.ValidationMessageFor(x => x.AvailableQuantity)

        </div>
      

        

                <div class="input-group mg-b-pro-edt">

                    <input type="submit" value="Save" id="submit" class="btn btn-success" />


                </div>
        </div>
        }
        @if (ViewBag.Message != null)
    {


            <p id="message">@ViewBag.Message</p>
    }

    </div>

